@model School._Distance_Learning.Models.Subjects

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Subjects</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Complexity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Complexity)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Teachers
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ts in Model.TeacherSubject)
        {
            <tr>
                <td>
                    @ts.Teacher.PartName
                </td>
                <td>
                    <a asp-controller="TeacherSubjects" asp-action="Details" asp-route-id="@ts.TeacherSubjectId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.SubjectId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
