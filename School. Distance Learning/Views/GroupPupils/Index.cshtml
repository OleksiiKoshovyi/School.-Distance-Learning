@model IEnumerable<School._Distance_Learning.Models.GroupPupil>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pupil)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Group.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pupil.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GroupPupilId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GroupPupilId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GroupPupilId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
